{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "actions",
    "bin",
    "commands",
    "lib"
  ],
  "exclude": [
    "node_modules",
    "e2e"
  ]
}
